load("@fbsource//tools/build_defs/third_party:yarn_defs.bzl", "yarn_workspace")

oncall("react_native")

yarn_workspace(
    name = "yarn-workspace",
    srcs = glob(
        ["src/**/*.js"],
        exclude = [
            "**/__fixtures__/**",
            "**/__mocks__/**",
            "**/__tests__/**",
        ],
    ),
    visibility = ["PUBLIC"],
)
